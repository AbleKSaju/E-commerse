    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assets/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <%-include('../../partials/admin-header')%>
    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner Management </h2>
                </div>
                <div>
                    <!-- <a href="#" class="btn btn-light rounded font-md">Export</a>
                    <a href="#" class="btn btn-light rounded  font-md">Import</a> -->
                    <a href="/admin/addBanner" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="table-responsive">
                <table id="grid" class="item row align-items-center table-spacing">
                    <tr>
                        <th>Product</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Action</th>
                    </tr>
                    <% for (i = 0; i < data.length; i++) { %>
                    <!-- <tr></tr> -->
                    <tr>
                        <td>
                            <img src="/uploads/banner/<%= data[i].image %>" class="img-sm img-thumbnail mt-3 mb-0"
                                style="width: 130px; height: 80px;" alt="Item">
                        </td>
                        <td><h6 class="title mb-0"><%= data[i].title %></h6></td>
                        <td>
                            <p><%= data[i].description %></p>
                        </td>
                        <td>
                            <p><%= data[i].date %></p>
                        </td>
                        <td>
                            <%= data[i].location %>
                        </td>
                        <td class="col-action text-end">
                            <div class="btn-group" role="group">
                                <a href="/admin/editBanner/<%=data[i]._id%>" class="btn btn-sm font-sm rounded btn-brand">
                                    Edit
                                </a>
                                <a href="/admin/deleteBanner/<%=data[i]._id%>" class="btn btn-sm font-sm btn-light rounded">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                </table>
                     <% if (totalpages) { %>
                <div class="pagination">
                  <% if (currentpage > 1) { %>
                    <button><a href="?page=<%= currentpage - 1 %>">Previous</a></button>
                  <% } %>
              
                  <% for (let i = 1; i <= totalpages; i++) { %> <!-- Change the loop to start from 1 and go up to totalpages -->
                    <button><a href="?page=<%= i %>" class="<%= i === currentpage ? 'active' : '' %>"><%= i %></a></button>
                  <% } %>
              
                  <% if (currentpage < totalpages) { %>
                    <button><a href="?page=<%= currentpage + 1 %>">Next</a></button>
                  <% } %>
                </div>
              <% } %> 
            </div>
        </section> <!-- content-main end// -->
        <style>
            .table-spacing th,
            .table-spacing td {
                padding-left: 80px; /* Adjust the value as needed for the desired spacing */
            }
            .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        }
        
        .pagination button {
        background-color: #f5f5f5;
        border: 1px solid #ccc;
        padding: 6px 12px;
        margin: 0 3px;
        cursor: pointer;
        
        transition: background-color 0.3s, color 0.3s;
        }
        
        .pagination button.active {
        background-color: #007bff;
        color: #fff;
        border-color: #007bff;
        }
        
        .pagination button:hover {
        background-color: #ddd;
        }
        
        </style>
    </main>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
