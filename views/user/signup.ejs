<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                  <%if(exist){%>
                    <p id="passError" class="text-danger">Account Already Exist</p>
                    <%}%>
  
                  <form class="mx-1 mx-md-4" method="post" action="/signup">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-user fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label"  for="form3Example1c">Your Name</label><br>
                        <input type="text" id="name"  onblur="capitalizeFirstLetter(this)" name="name" style="width: 20rem;" />
                       
                      </div>
                    </div>
  
                      <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-key fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example4cd">Mobile</label><br>
                        <input type="text" id="number"  title="must be 10 digits" pattern="[1-9]{1}[0-9]{9}" name="mobile"  style="width: 20rem;" />
              
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <!-- <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> -->
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="form3Example3c">Your Email</label><br>
                        <input type="email" id="email"  name="email" style="width: 20rem; height: 3rem;" />
                      
                      </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <div class="form-outline flex-fill mb-0">
                        <label class="form-label" for="password">Password</label>
                        <input
                          type="password"
                          id="password"
                          pattern=".{4,}"
                          title="At least 4 characters"
                          name="password"
                          style="width: 20rem; height: 3rem;"
                        />
                      </div>
                    </div>
                  
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button onclick="validate()" type="submit" class="btn btn-primary btn-lg">Sent OTP</button>
                    </div>
                  </form>
                  <p id="err-msg" class="text-danger"></p>
  
                </div>
                <!-- <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
  
                  <img src="/images/dps.jpeg " style="height: 400px;width: 600px;"
                    class="img-fluid" alt=""/>
  
